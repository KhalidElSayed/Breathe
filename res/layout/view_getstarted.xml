<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/card_paddingsides"
    android:paddingRight="@dimen/card_paddingsides"
    android:paddingTop="@dimen/card_paddingtop" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_white"
        android:orientation="vertical"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/textview_padding"
            android:text="Ready?"
            android:textColor="@color/holo_blue"
            android:textSize="@dimen/wizard_textsize" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_transparent"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="left|center_vertical"
            android:padding="@dimen/textview_padding"
            android:text="Get started now!"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"
            android:textStyle="italic" />

    </LinearLayout>

</LinearLayout>